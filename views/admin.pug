<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Admin | CityVOICE
        link(rel="icon", href="/logo.png", type="image/png")
        link(rel="stylesheet", href="/style.css")
        link(rel="stylesheet", href="/styleM.css")
        link(rel="stylesheet", href="/admin.css")
        script(defer, src="https://code.jquery.com/jquery-3.5.1.js")
        script(defer, src="/script.js")
    body
        header
            .header-logo
                h1
                    a(href="/")
                        span.city CITY
                        span.voice VOICE
                p#todayDate
        .container
            h3 Add Article
            form(action="/admin/submit", method="POST")
                input(type="text", name="title", placeholder="Title", required)
                input(type="subtitle", name="subtitle", placeholder="Subtitle", required)
                .field1
                    select(name="category", required)
                        option(value="", selected, disabled) Select Category
                        option(value="Economy") Economy
                        option(value="Politics") Politics
                        option(value="Sports") Sports
                        option(value="Entertainment") Entertainment
                        option(value="Editorial") Editorial
                    .date-time-field
                        .date-field
                            select(name="dayselect", required)
                                option(value="", selected, disabled) Day
                                - var n = 1
                                while n <= 31
                                    option(value=n)= n++
                            select(name="monthselect", required)
                                option(value="", selected, disabled) Month
                                - var months = ['Jan', 'Feb', 'Mar', 'Arp', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                                each month, i in months
                                    option(value=month)= month
                            select(name="yearselect", required)
                                option(value="", selected, disabled) Year
                                - var year = new Date().getFullYear()
                                - var yearCounter = year
                                while yearCounter >= year - 50
                                    option(value=yearCounter)= yearCounter--
                        .time-field
                            input(type="number", name="hour", min="0", max="24", placeholder="00", required)
                            input(type="number", name="minute", min="0", max="59", placeholder="00", required)
                .field2
                    input(type="text", name="by", placeholder="Author", required)
                    input(type="text", name="location", placeholder="Location", required)
                input(type="text", name="imgurl", placeholder="Image URL", required)
                input(type="text", name="imgcaption", placeholder="Image Caption", required)
                textarea(name="para1", placeholder="Content Para 1", required)
                textarea(name="para2", placeholder="Content Para 2")
                textarea(name="para3", placeholder="Content Para 3")
                textarea(name="para4", placeholder="Content Para 4")
                textarea(name="para5", placeholder="Content Para 5")
                input(type="submit", name="submit", value="Save")
        footer
            p Copyright &copy; CityVoice 2020